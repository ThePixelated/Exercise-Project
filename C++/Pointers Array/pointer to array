#include <iostream>

int main() {
	int arr[3][5];
	int counter = 1;

	int *p = &arr[0][0];

	// Insert a value to an array
	// --------------------------
	for (int i = 0; i < 15; i++) {

		if ((i % 5) % 2 != 0) {
			*(p + i) = 0;
			continue;
		}

		*(p + i) = counter;
		counter++;
	}					

	// Printing out the array
	// ----------------------
	std::cout << "\n ---------------------\n";
	for (int j = 0; j < 15; j++) {

		if (((j % 5) % 2) != 0 ) {					
			std::cout << "  ";								
			continue;
		}

		std::cout << " | " << *(p + j) << " |";				

		// Line breaker										
		if (((j + 1) % 5) == 0 ) {							
			std::cout << "\n ---------------------\n";		 
		}										
	}

	return 0;
}
